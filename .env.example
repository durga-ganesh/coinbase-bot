# Environment Variables
COINBASE_API_KEY=your_coinbase_api_key_here
COINBASE_API_SECRET=your_coinbase_api_secret_here
COINBASE_PASSPHRASE=your_coinbase_passphrase_here

# Set to true for sandbox environment, false for production
COINBASE_SANDBOX=true

# Optional: Set custom base URLs
# COINBASE_API_BASE_URL=https://api.coinbase.com
# COINBASE_SANDBOX_API_BASE_URL=https://api-public.sandbox.pro.coinbase.com

# Logging level
LOG_LEVEL=INFO

# Database URL (if you want to store trade history)
# DATABASE_URL=sqlite:///trading_history.db
